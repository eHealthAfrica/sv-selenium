#!/bin/bash
SEL_DIR='/tmp/sv-selenium'
CHROMEDRIVER_LINUX_URL='http://chromedriver.storage.googleapis.com/2.20/chromedriver_linux32.zip'
CHROMEDRIVER_MAC_URL='http://chromedriver.storage.googleapis.com/2.20/chromedriver_mac32.zip'

unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
   CHROMEDRIVER_URL=$CHROMEDRIVER_LINUX_URL
else
   CHROMEDRIVER_URL=$CHROMEDRIVER_MAC_URL
fi

mkdir -p $SEL_DIR
rm -rf $SEL_DIR/chromedriver*
cd $SEL_DIR

if [ `which wget` ]; then
  wget $CHROMEDRIVER_URL
elif [ `which curl` ]; then
  curl -O $CHROMEDRIVER_URL
else
  echo "No wget or curl in path"
  exit 1
fi

unzip chromedriver*.zip
rm chromedriver*.zip

